#!/bin/sh
# postinst script for pmmc-pte-flashplayer-installer
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

. /usr/share/debconf/confmodule
. /usr/share/sei/functions
. /etc/lsb-release

case "${DISTRIB_CODENAME}" in
    "hardy")
        MKTEMP_OPTS="-t"
    ;;

    *)
        MKTEMP_OPTS="--tmpdir"
    ;;
esac

CACHE_DIR=/var/opt/pmmc/pte/cache
TEMP=`mktemp -d ${MKTEMP_OPTS} sei-unpack-XXXXXX`

exit_with_error() {
    echo "SEI data is NOT installed."
    db_fset sei-installer/httpget seen false
    db_set sei-installer/httpget false
    exit 1
}

download_and_unpack() {
    if [ -d "${CACHE_DIR}" -a -f "${CACHE_DIR}"/${FILENAME} ]
    then
        echo "Installing from local file ${CACHE_DIR}/${FILENAME}"
    else # no local file
        db_get sei-installer/httpget

        if [ "${RET}" != "true" ]
        then
            exit_with_error "download or license refused"
        fi

        sei_download ${CACHE_DIR} || exit_with_error
    fi # end if local file

    sei_unpack ${CACHE_DIR} ${1} || exit_with_error
}

install_data() {
    DATA_ORIG=${1}/usr/share/pte-pmmc/menu_sei
    DATA_DEST=/opt/pmmc/pte/sei

    for file in `find ${DATA_ORIG} -type f | grep -v "manua"`
    do
        newdir=`dirname ${file} | sed -e "s@${DATA_ORIG}@${DATA_DEST}@"`
        install -D -m 644 ${file} ${newdir}/`basename ${file}`
    done

    cat > ${DATA_DEST}/sei.html <<EOF
<html>
<head>
<style>html, body { margin: 0; padding: 0; }</style>
</head>
<body>
<object width="100%" height="100%" data="sei.swf">
<param name="movie" value="sei.swf" />
</object>
</body>
</html>
EOF

    ln -s sei.html ${DATA_DEST}/index.html
}

case "${1}" in
    configure)
        download_and_unpack ${TEMP}
        install_data ${TEMP} && rm -rf ${TEMP} && echo "SEI data installed."
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`${1}'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
